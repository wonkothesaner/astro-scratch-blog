---
import { Image } from "astro:assets";

interface Props {
    image: ImageMetadata;
    alt: string; // Alt text for the image
    source?: string; // Optional source text for the image
    flip?: boolean;
}

const { image, alt, source, flip } = Astro.props as Props;

const mediaClass = flip ? "media media-flip" : "media";
---

<div class={mediaClass}>
    <div class="img">
        <Image src={image} alt={alt} />
        <p class="source">
                {source && <span>Source: {source}</span>}
        </p>
    </div>
    <div class="media-content">
        <slot />
        <!-- Content will be inserted here -->
    </div>
</div>

<style>
    .media {
        display: grid;
        grid-template-columns: fit-content(200px) 1fr;
        grid-template-rows: 1fr auto;
        grid-template-areas:
            "image content"
            "image footer";
        grid-gap: 20px;
        margin-bottom: 1em;
        align-items: start; /* Align grid items to top */
    }

    .media-flip {
        grid-template-columns: 1fr fit-content(250px);
        grid-template-areas:
            "content image"
            "footer image";
    }

    .img {
        grid-area: image;
        display: flex;
        flex-direction: column;
        align-items: start; /* Align image and source to top/left */
    }

    .img img {
        display: block;
    }

    .source {
        margin-top: 0.5em;
        align-self: flex-start;
        font-size: 0.85em;
        color: #a0aec0;
    }

    .media-content {
        grid-area: content;
        align-self: start; /* Ensure content starts at top */
    }

    :global(.media-content p:first-of-type) {
        margin-top: 0;
    }

    .footer {
        grid-area: footer;
    }

    .media img {
        width: 100%;
        height: auto;
        object-fit: cover;
        display: block;
    }

    @media (max-width: 720px) {
        .media {
            grid-template-columns: fit-content(100px) 1fr;
        }

        .media-flip {
            grid-template-columns: 1fr fit-content(100px);
        }

        .img {
            align-items: center; /* Center image on smaller screens */
        }
    }
</style>
